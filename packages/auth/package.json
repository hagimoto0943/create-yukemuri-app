{
  "name": "@yukemuri/auth",
  "version": "0.1.5",
  "description": "Unified authentication manager for yukemuri.js (JWT, Cookie, OAuth, Basic, etc.)",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "auth",
    "jwt",
    "cookie",
    "oauth",
    "yukemuri",
    "typescript",
    "authentication"
  ],
  "dependencies": {},
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
